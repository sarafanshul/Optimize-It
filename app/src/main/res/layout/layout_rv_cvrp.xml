<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:elevation="@dimen/left_margin"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/left_margin"
            android:paddingVertical="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Worker ID:"
                    android:layout_weight="0.4"
                    android:textSize="18sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:id="@+id/rv_cvrp_tw_id"
                    android:text="20193801"
                    android:textStyle="bold"
                    android:textColor="?colorOnColorOnPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Distance travelled:"
                    android:layout_weight="0.4"
                    android:textSize="18sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:id="@+id/rv_cvrp_tw_distance"
                    android:text="20193801"
                    android:textStyle="bold"
                    android:textColor="?colorOnColorOnPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Items delivered:"
                    android:layout_weight="0.4"
                    android:textSize="18sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:id="@+id/rv_cvrp_tw_count"
                    android:layout_gravity="center"
                    android:text="20193801"
                    android:textStyle="bold"
                    android:textColor="?colorOnColorOnPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>