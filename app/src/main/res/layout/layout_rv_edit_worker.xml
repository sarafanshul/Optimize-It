<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="@dimen/rv_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/edit_container_cw_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        app:strokeWidth="1dp"
        android:layout_margin="6dp"
        app:strokeColor="?colorOnColorOnPrimary"
        app:cardCornerRadius="8dp"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:id="@+id/edit_worker_tw_id"
                    android:layout_height="wrap_content"
                    android:text="Container Name"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:layout_gravity="center"
                    android:background="@drawable/fill_rounded_corners"
                    android:textColor="?colorOnPrimary"
                    android:padding="4dp"
                    android:gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_outline_local_shipping_24"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:id="@+id/edit_worker_tw_capacity"
                    android:layout_height="wrap_content"
                    android:text="Capacity"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/outline_square_foot_24"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_worker_tw_dist"
                    android:text="Distance"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_outline_departure_board_24"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No route set"
                    android:id="@+id/edit_worker_tw_route"
                    android:layout_weight="0.8"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>